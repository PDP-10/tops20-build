	MOVEI B," "
	CAIE BB,^D<12*3600>
	CAIN BB,0
	CALLX (MSEC1,BOUTA)	;[7.1183] (A,B/A) Output the space
OTT9:

;ODTNCS...
;EXIT

ODT8:	UMOVE A,1		;FETCH USER'S OUTPUT DESIGNATOR
