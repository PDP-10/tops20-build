		ASCIZ /-EDT/	;EASTERN
		ASCIZ /-CDT/	;CENTRAL
		ASCIZ /-MDT/	;MOUNTAIN
		ASCIZ /-PDT/	;PACIFIC
		ASCIZ /-YDT/	;YUKON
		ASCIZ /-HDT/	;ALASKA-HAWAII
		ASCIZ /-BDT/]-4(E) ;BERING
