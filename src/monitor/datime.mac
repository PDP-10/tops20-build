		ASCIZ /-EST/	;EASTERN
		ASCIZ /-CST/	;CENTRAL
		ASCIZ /-MST/	;MOUNTAIN
		ASCIZ /-PST/	;PACIFIC
		ASCIZ /-YST/	;YUKON
		ASCIZ /-HST/	;ALASKA-HAWAII
