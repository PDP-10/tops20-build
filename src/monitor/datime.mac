	CALLX (MSEC1,NOUTXX)	;[7.1183] (A,B,C/A) Output the minutes
	TLNE F,B10
	JRST OTT4		;SECONDS SUPPRESSED
	MOVEI B,":"
	CALLX (MSEC1,BOUTA)	;[7.1183] (A,B/A) Output the colon
