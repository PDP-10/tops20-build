%SBTTL 'EDT$$START_CPY  - start a COPY operation'

GLOBAL ROUTINE EDT$$START_CPY (			! Start a COPY operation
	BUF					! Target buffer
    ) : NOVALUE =

!++
! FUNCTIONAL DESCRIPTION:
!
!	Start copy.  Initialize for a copy operation.
!
! FORMAL PARAMETERS:
!
!  BUF 			the buffer to which the lines will be copied at the present
!			location.
!
! IMPLICIT INPUTS:
!
!	NONE
!
! IMPLICIT OUTPUTS:
!
!	ALT_BUF
!
! ROUTINE VALUE:
!
!	NONE
!
! SIDE EFFECTS:
!
!	NONE
!
!--

    BEGIN

    EXTERNAL ROUTINE
	EDT$$RD_CURLN : NOVALUE,
	EDT$$START_INS : NOVALUE;

    EXTERNAL
	CUR_BUF : REF TBCB_BLOCK,	! Current text buffer control block
	ALT_BUF;				! Alternate text buffer control block

    LOCAL
	SAVE_TBCB;

    SAVE_TBCB = .CUR_BUF;
    CUR_BUF = ALT_BUF = .BUF;
    EDT$$RD_CURLN ();
    EDT$$START_INS ();
    CUR_BUF = .SAVE_TBCB;
    EDT$$RD_CURLN ();
    END;


END
ELUDOM
