!SOFTWARE ON EQUIPMENT THAT IS NOT SUPPLIED BY DIGITAL.
!
!
!++
! FACILITY:	EDT -- The DEC Standard Editor
!
! ABSTRACT:
!
!	This module outputs an erase to end of line sequence.
!
! ENVIRONMENT:	Runs at any access mode - AST reentrant
!
! AUTHOR: Bob Kushlis, CREATION DATE: September 8, 1979
!
! MODIFIED BY:
!
! 1-001	- Original.  DJS 12-Feb-1981.  This module was created by
!	extracting the routine EDT$$SC_ERATOEOL  from module SCREEN.
! 1-002	- Regularize headers.  JBS 13-Mar-1981
!--

%SBTTL 'Declarations'
!
! TABLE OF CONTENTS:
!

REQUIRE 'EDTSRC:TRAROUNAM';

FORWARD ROUTINE
    EDT$$SC_ERATOEOL : NOVALUE;

!
! INCLUDE FILES:
!

REQUIRE 'EDTSRC:EDTREQ';

!
! MACROS:
!
!	NONE
!
! EQUATED SYMBOLS:
!

BIND
    ERS_L_52 = UPLIT (%STRING (%CHAR (ASC_K_ESC), 'K')),
    ERS_L_100 = UPLIT (%STRING (%CHAR (ASC_K_ESC), '[K'));

LITERAL
    ERS_L_52_LEN = 2,
    ERS_L_100_LEN = 3;

!
! OWN STORAGE:
!
!	NONE
!
! EXTERNAL REFERENCES:
!
!	In the routine
%SBTTL 'EDT$$SC_ERATOEOL  - erase to end of line'

GLOBAL ROUTINE EDT$$SC_ERATOEOL 		! Erase to end of line
    : NOVALUE =

!++
! FUNCTIONAL DESCRIPTION:
!
!	Output an erase to end of line sequence.
!
! FORMAL PARAMETERS:
!
!	NONE
!
! IMPLICIT INPUTS:
!
!	TI_TYP
!
! IMPLICIT OUTPUTS:
!
!	NONE
!
! ROUTINE VALUE:
!
!	NONE
!
! SIDE EFFECTS:
!
!	NONE
!
!--

    BEGIN

    EXTERNAL ROUTINE
	EDT$$FMT_LIT;

    EXTERNAL
	TI_TYP;				! Terminal type.

    IF (.TI_TYP EQL TERM_VT52)
    THEN
	EDT$$FMT_LIT (CH$PTR (ERS_L_52), ERS_L_52_LEN)
    ELSE
	IF (.TI_TYP EQL TERM_VT100)
	THEN
	    EDT$$FMT_LIT (CH$PTR (ERS_L_100), ERS_L_100_LEN);

    END;


END
ELUDOM
