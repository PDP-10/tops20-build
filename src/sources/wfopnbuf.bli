%SBTTL 'EDT$$NEW_BUF  - open (or create) a text buffer'

GLOBAL ROUTINE EDT$$NEW_BUF 			! Open (or create) a text buffer
    : NOVALUE =

!++
! FUNCTIONAL DESCRIPTION:
!
!	This routine opens (or creates) a text buffer.  The text buffer
!	has originally no lines, but may have an associated input file.
!	CUR_BUF  is initialized to reflect this state.
!
! FORMAL PARAMETERS:
!
!	NONE
!
! IMPLICIT INPUTS:
!
!	NONE
!
! IMPLICIT OUTPUTS:
!
!	CUR_BUF
!
! ROUTINE VALUE:
!
!	NONE
!
! SIDE EFFECTS:
!
!	NONE
!
!--

    BEGIN

    EXTERNAL ROUTINE
	EDT$$WF_NEWBUK : NOVALUE,
	EDT$$RD_ILN;

    EXTERNAL
    	WK_AVAIL,
    	WK_GRTSTBUK,
	CUR_BUF : REF TBCB_BLOCK;	! Current text buffer control block

    IF .WK_AVAIL NEQ 0
    THEN
        BEGIN
    	CUR_BUF [TBCB_FIRST_BUKT] = .WK_AVAIL;
        CUR_BUF [TBCB_LAST_BUKT] = .WK_AVAIL;
    	END
    ELSE
    	BEGIN
    	CUR_BUF [TBCB_FIRST_BUKT] = .WK_GRTSTBUK;
        CUR_BUF [TBCB_LAST_BUKT] = .WK_GRTSTBUK;
    	END;
    
    EDT$$WF_NEWBUK (0, 0);
    EDT$$RD_ILN ();
    END;


END
ELUDOM
