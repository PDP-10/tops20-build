%SBTTL 'EDT$$TOP_BUF  - go to top of current buffer'

GLOBAL ROUTINE EDT$$TOP_BUF 			! Go to top of current buffer
    : NOVALUE =

!++
! FUNCTIONAL DESCRIPTION:
!
!	Position to the top of the current buffer.
!
! FORMAL PARAMETERS:
!
!	NONE
!
! IMPLICIT INPUTS:
!
!	CUR_BUF
!	LNO_ZERO
!
! IMPLICIT OUTPUTS:
!
!	CUR_BUF
!
! ROUTINE VALUE:
!
!	NONE
!
! SIDE EFFECTS:
!
!	May read a bucket
!
!--

    BEGIN

    EXTERNAL ROUTINE
	EDT$$RD_CURLN : NOVALUE;

    EXTERNAL
	CUR_BUF : REF TBCB_BLOCK,	! Current text buffer control block
	LNO_ZERO : LN_BLOCK;

    LOCAL
	FIRST;

    CUR_BUF [TBCB_CUR_BUKT] = FIRST = .CUR_BUF [TBCB_FIRST_BUKT];
    CUR_BUF [TBCB_LINE_ADDR] = WFB_FIXED_SIZE;
    CUR_BUF [TBCB_CHAR_POS] = 0;
    MOVELINE (LNO_ZERO, CUR_BUF [TBCB_CUR_LIN]);
    EDT$$RD_CURLN ();
    END;


END
ELUDOM
